{
  "manifest_version": 3,
  "name": "Bookmarks Bar Switcher",
  "version": "1.0.0",
  "description": "Switch between different bookmark bar states (Personal, Work, Development, etc.)",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bookmarks Bar Switcher"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
